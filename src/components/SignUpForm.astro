<div class="relative w-80 flex-none bg-white p-4 md:w-160">
  <form @submit.prevent="submitForm" name="signup" netlify>
    <fieldset class="grid gap-4 sm:grid-cols-[1fr_auto]">
      <h2 x-dialog:title class="text-center font-semibold sm:col-span-2">
        Sign up for updates
      </h2>

      <label for="email" class="sr-only">Your email</label>

      <input
        type="email"
        id="email"
        name="email"
        x-ref="email"
        x-model="formData.email"
        required
        placeholder="Enter your email address"
        class="w-full"
      />
      <button type="submit" class="bg-black p-4 text-white">Sign up</button>
    </fieldset>
  </form>
</div>
